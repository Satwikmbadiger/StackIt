{
    "designSystem": {
      "name": "StackIt Q&A Platform",
      "version": "1.0.0",
      "description": "Modern dark-themed Q&A platform with cyan accents",
      "colors": {
        "primary": {
          "cyan": "#00D4AA",
          "cyanHover": "#00B894",
          "purple": "#6C5CE7",
          "purpleHover": "#5F3DC4"
        },
        "background": {
          "dark": "#1A1D29",
          "cardDark": "#252A3A",
          "sidebarDark": "#1E2333",
          "white": "#FFFFFF"
        },
        "text": {
          "primary": "#FFFFFF",
          "secondary": "#B0B3B8",
          "muted": "#8E9297",
          "accent": "#00D4AA"
        },
        "semantic": {
          "success": "#27AE60",
          "warning": "#F39C12",
          "error": "#E74C3C",
          "info": "#3498DB"
        }
      },
      "typography": {
        "fontFamily": {
          "primary": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
          "code": "'Fira Code', 'Consolas', monospace"
        },
        "fontSize": {
          "xs": "0.75rem",
          "sm": "0.875rem",
          "base": "1rem",
          "lg": "1.125rem",
          "xl": "1.25rem",
          "2xl": "1.5rem",
          "3xl": "1.875rem"
        },
        "fontWeight": {
          "normal": "400",
          "medium": "500",
          "semibold": "600",
          "bold": "700"
        }
      },
      "spacing": {
        "xs": "0.25rem",
        "sm": "0.5rem",
        "md": "1rem",
        "lg": "1.5rem",
        "xl": "2rem",
        "2xl": "3rem",
        "3xl": "4rem"
      },
      "borderRadius": {
        "sm": "0.25rem",
        "md": "0.5rem",
        "lg": "0.75rem",
        "xl": "1rem",
        "full": "9999px"
      },
      "shadows": {
        "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
        "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
        "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
        "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1)"
      }
    },
    "components": {
      "header": {
        "height": "64px",
        "backgroundColor": "background.cardDark",
        "padding": "spacing.md",
        "borderBottom": "1px solid rgba(255, 255, 255, 0.1)"
      },
      "sidebar": {
        "width": "240px",
        "backgroundColor": "background.sidebarDark",
        "padding": "spacing.lg"
      },
      "logo": {
        "fontSize": "typography.fontSize.xl",
        "fontWeight": "typography.fontWeight.bold",
        "color": "colors.primary.cyan"
      },
      "searchBar": {
        "backgroundColor": "rgba(255, 255, 255, 0.1)",
        "borderRadius": "borderRadius.lg",
        "padding": "spacing.sm spacing.md",
        "border": "1px solid rgba(255, 255, 255, 0.2)",
        "color": "text.primary",
        "placeholder": "text.muted"
      },
      "button": {
        "primary": {
          "backgroundColor": "colors.primary.purple",
          "color": "colors.text.primary",
          "padding": "spacing.sm spacing.md",
          "borderRadius": "borderRadius.lg",
          "fontWeight": "typography.fontWeight.medium",
          "hover": {
            "backgroundColor": "colors.primary.purpleHover"
          }
        },
        "secondary": {
          "backgroundColor": "transparent",
          "color": "colors.text.secondary",
          "border": "1px solid rgba(255, 255, 255, 0.2)",
          "padding": "spacing.sm spacing.md",
          "borderRadius": "borderRadius.lg"
        }
      },
      "questionCard": {
        "backgroundColor": "background.cardDark",
        "borderRadius": "borderRadius.xl",
        "padding": "spacing.xl",
        "marginBottom": "spacing.lg",
        "border": "1px solid rgba(255, 255, 255, 0.1)",
        "hover": {
          "boxShadow": "shadows.md"
        }
      },
      "answerCard": {
        "backgroundColor": "background.cardDark",
        "borderRadius": "borderRadius.lg",
        "padding": "spacing.lg",
        "marginBottom": "spacing.md",
        "borderLeft": "4px solid colors.primary.cyan"
      },
      "userAvatar": {
        "width": "40px",
        "height": "40px",
        "borderRadius": "borderRadius.full",
        "border": "2px solid colors.primary.cyan"
      },
      "tag": {
        "backgroundColor": "rgba(108, 92, 231, 0.2)",
        "color": "colors.primary.purple",
        "padding": "spacing.xs spacing.sm",
        "borderRadius": "borderRadius.full",
        "fontSize": "typography.fontSize.sm",
        "fontWeight": "typography.fontWeight.medium"
      },
      "voteButton": {
        "width": "32px",
        "height": "32px",
        "backgroundColor": "transparent",
        "color": "text.secondary",
        "border": "1px solid rgba(255, 255, 255, 0.2)",
        "borderRadius": "borderRadius.sm",
        "hover": {
          "backgroundColor": "rgba(255, 255, 255, 0.1)",
          "color": "colors.primary.cyan"
        }
      },
      "notificationBell": {
        "position": "relative",
        "color": "text.secondary",
        "hover": {
          "color": "colors.primary.cyan"
        },
        "badge": {
          "backgroundColor": "colors.semantic.error",
          "color": "colors.text.primary",
          "borderRadius": "borderRadius.full",
          "fontSize": "typography.fontSize.xs",
          "padding": "2px 6px",
          "position": "absolute",
          "top": "-8px",
          "right": "-8px"
        }
      }
    },
    "layout": {
      "maxWidth": "1200px",
      "breakpoints": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px"
      },
      "grid": {
        "main": {
          "display": "grid",
          "gridTemplateColumns": "240px 1fr 320px",
          "gap": "spacing.xl"
        },
        "mobile": {
          "display": "flex",
          "flexDirection": "column",
          "gap": "spacing.md"
        }
      }
    },
    "pages": {
      "home": {
        "sections": [
          "sidebar",
          "questionsList",
          "rightSidebar"
        ]
      },
      "questionDetail": {
        "sections": [
          "sidebar",
          "questionContent",
          "answersSection",
          "answerForm"
        ]
      },
      "askQuestion": {
        "sections": [
          "sidebar",
          "questionForm"
        ]
      }
    },
    "features": {
      "richTextEditor": {
        "toolbar": {
          "backgroundColor": "background.cardDark",
          "borderBottom": "1px solid rgba(255, 255, 255, 0.1)",
          "padding": "spacing.sm"
        },
        "editor": {
          "backgroundColor": "background.cardDark",
          "color": "text.primary",
          "padding": "spacing.md",
          "minHeight": "200px",
          "border": "1px solid rgba(255, 255, 255, 0.1)",
          "borderRadius": "borderRadius.lg"
        }
      },
      "voting": {
        "container": {
          "display": "flex",
          "flexDirection": "column",
          "alignItems": "center",
          "gap": "spacing.xs"
        },
        "count": {
          "fontSize": "typography.fontSize.lg",
          "fontWeight": "typography.fontWeight.bold",
          "color": "text.primary"
        }
      },
      "tags": {
        "container": {
          "display": "flex",
          "flexWrap": "wrap",
          "gap": "spacing.sm",
          "marginTop": "spacing.md"
        }
      }
    },
    "animations": {
      "hover": {
        "transition": "all 0.2s ease-in-out"
      },
      "buttonPress": {
        "transform": "scale(0.95)",
        "transition": "transform 0.1s ease-in-out"
      }
    }
  }