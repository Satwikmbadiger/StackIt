        "cursor": "pointer",
        "border": "none",
        "display": "inline-flex",
        "alignItems": "center",
        "justifyContent": "center",
        "gap": "0.5rem"
      },
      "variants": {
        "primary": {
          "background": "linear-gradient(135deg, #6366F1 0%, #4F46E5 100%)",
          "color": "#FFFFFF",
          "boxShadow": "0 10px 25px -5px rgb(99 102 241 / 0.4)",
          "hover": {
            "transform": "translateY(-1px)",
            "boxShadow": "0 20px 25px -5px rgb(99 102 241 / 0.4)"
          }
        },
        "secondary": {
          "background": "#F8FAFC",
          "color": "#334155",
          "border": "1px solid #E2E8F0",
          "hover": {
            "background": "#F1F5F9",
            "borderColor": "#CBD5E1"
